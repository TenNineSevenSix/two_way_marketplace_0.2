<main>
<p id="notice"><%= notice %></p>
<div class="profile" id="message">
<% profile = self.get_profile(@message.sender_id) %>
<dl>
  <dt>Sender</dt>
  <dd><%= link_to "#{profile.first_name} #{profile.last_name}", profile %></dd>
  <dt>Subject</dt>
  <dd><%= @message.subject %></dd>
  <dt>Message</dt>
  <dd><%= @message.message %></dd>
</dl>
<%= render 'read', message: @message %>
</div>
</main>
