<div class="form" id="message">
<p id="notice"><%= notice %></p>

<p>
  <strong>Sender:</strong>
  <%= self.get_profile_name(@message.sender_id) %>
</p>

<p>
  <strong>Subject:</strong>
  <%= @message.subject %>
</p>

<p>
  <strong>Message:</strong>
  <%= @message.message %>
</p>

<%= render 'read', message: @message %>

<br />

<%= link_to 'Back', messages_path %>
</div>
